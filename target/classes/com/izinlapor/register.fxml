<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.izinlapor.controller.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Izin Lapor - Registrasi">
        <font>
            <Font size="24.0" />
        </font>
    </Label>
    <TextField fx:id="nikField" promptText="NIK (Wajib)" />
    <TextField fx:id="fullNameField" promptText="Nama Lengkap (Wajib)" />
    <TextField fx:id="usernameField" promptText="Username (Wajib)" />
    <PasswordField fx:id="passwordField" promptText="Password (Wajib)" />
    <TextField fx:id="phoneField" promptText="No. Telepon" />
    <TextField fx:id="addressField" promptText="Alamat" />
    <Button onAction="#handleRegister" text="Daftar" />
    <Hyperlink onAction="#switchToLogin" text="Sudah punya akun? Login disini" />
</VBox>
