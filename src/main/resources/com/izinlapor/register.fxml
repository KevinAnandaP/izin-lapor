<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.izinlapor.controller.RegisterController">
    <!-- Left Side -->
    <VBox alignment="CENTER" prefWidth="320.0" styleClass="login-sidebar" HBox.hgrow="NEVER">
        <Label styleClass="brand-label" text="Izin Lapor" />
        <Label styleClass="tagline-label" text="Bergabunglah Bersama Kami" wrapText="true" textAlignment="CENTER"/>
    </VBox>
    
    <!-- Right Side -->
    <StackPane HBox.hgrow="ALWAYS" style="-fx-background-color: white;">
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent; -fx-background: white; -fx-padding: 0;">
            <content>
                <StackPane style="-fx-background-color: white;">
                    <VBox alignment="CENTER" spacing="20.0" styleClass="login-form-container" style="-fx-max-width: 500; -fx-background-color: white;">
                        <padding>
                            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                        </padding>
                        
                        <VBox alignment="CENTER" spacing="5.0">
                            <Label styleClass="heading-label" text="Buat Akun Baru" />
                            <Label styleClass="subheading-label" text="Lengkapi data diri Anda" />
                        </VBox>
                        
                        <!-- Profile Photo Section -->
                        <VBox alignment="CENTER" spacing="10.0">
                            <StackPane style="-fx-background-color: #f0f2f5; -fx-background-radius: 50; -fx-border-radius: 50; -fx-border-color: #ddd;" maxHeight="100" maxWidth="100" minHeight="100" minWidth="100">
                                 <ImageView fx:id="profileImageView" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
                            </StackPane>
                            <Button onAction="#handleChoosePhoto" styleClass="button" text="Pilih Foto Profil" />
                        </VBox>
                        
                        <VBox spacing="15.0">
                            <TextField fx:id="nikField" promptText="NIK (Nomor Induk Kependudukan)" />
                            <TextField fx:id="fullNameField" promptText="Nama Lengkap" />
                            <TextField fx:id="usernameField" promptText="Username" />
                            <TextField fx:id="emailField" promptText="Email" />
                            <PasswordField fx:id="passwordField" promptText="Password" />
                            <TextField fx:id="phoneField" promptText="Nomor Telepon" />
                            <TextField fx:id="addressField" promptText="Alamat Lengkap" />
                            
                            <Button maxWidth="Infinity" onAction="#handleRegister" styleClass="button-primary" text="Daftar Sekarang" />
                        </VBox>
                        
                        <Hyperlink onAction="#switchToLogin" styleClass="hyperlink" text="Sudah punya akun? Login disini" />
                    </VBox>
                </StackPane>
            </content>
        </ScrollPane>
    </StackPane>
</HBox>
